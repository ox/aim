{
  "name": "aim",
  "author": "Artem",
  "description": "Artem's Instant Messenger, a Slack client dunked in nostalgia",
  "version": "1.0.0",
  "main": "dist/main.js",
  "license": "MIT",
  "scripts": {
    "build:main": "esbuild ./app/*.js --platform=node --format=cjs --outdir=dist",
    "build:app": "esbuild --bundle ./app.jsx --loader:.png=dataurl --loader:.gif=dataurl --external:fs --external:path --external:electron --format=cjs --outfile=./dist/app.dist.js",
    "build": "yarn build:main && yarn build:app",
    "prestart": "yarn build",
    "start": "electron ."
  },
  "devDependencies": {
    "electron": "^13.1.6",
    "electron-devtools-installer": "^3.2.0",
    "esbuild": "0.x"
  },
  "dependencies": {
    "aphrodite": "^2.4.0",
    "axios": "^0.21.1",
    "electron-is": "^3.0.0",
    "form-data": "^4.0.0",
    "qs": "^6.10.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "sqlite": "^4.0.23",
    "sqlite3": "^5.0.3",
    "styled-components": "^5.3.1",
    "styled-system": "^5.1.5",
    "websocket": "^1.0.34",
    "zustand": "^3.5.10"
  }
}
