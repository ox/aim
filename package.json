{
  "name": "aim",
  "author": "Artem",
  "description": "Artem's Instant Messenger, a Slack client dunked in nostalgia",
  "version": "1.0.0",
  "main": "dist/main.dist.js",
  "license": "MIT",
  "scripts": {
    "build:main": "esbuild ./main.js --platform=node --format=cjs --outfile=dist/main.dist.js",
    "build:app": "esbuild --bundle ./app.jsx --external:fs --external:path --external:electron --format=cjs --outfile=./dist/app.dist.js",
    "build": "yarn build:main && yarn build:app",
    "prestart": "yarn build",
    "start": "electron ."
  },
  "devDependencies": {
    "electron": "^13.1.6",
    "esbuild": "0.x"
  },
  "dependencies": {
    "aphrodite": "^2.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
